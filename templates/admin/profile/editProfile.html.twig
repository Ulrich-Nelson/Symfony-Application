{% extends 'base.html.twig' %}
{% block title 'Editer Mon profil' %}

{% block body %}
	<div class="container m-b-5">
	{% for message in app.flashes('success') %}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            	<h4 class="text-center messageFlash">{{message}} ‚úç </h4>
        </div>
        {% endfor %}
		
    	<h1>Modification du profil de {{ app.user.username}}</h1>
		{{ form_start(form) }}
			<div>{{ form_row(form.username) }}</div>
			<div>{{ form_row(form.phone) }}</div>
			<div>{{ form_row(form.email) }}</div>
		{{ form_rest(form) }}

		{{ form_end(form) }}
	</div>
{% endblock %}
