<div class="card mb-5" >
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') }}" style="width: 100%; height: auto;">

    {% else %}
        <img src="{{ '/images/properties/empty.jpg' }}" style="width: 100%; height: auto;">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">{{property.title}}</a>
        </h5>
        <p class="card-text">{{property.surface}}  mÂ² -  {{property.city}}  ({{property.postalCode}})</p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold;">{{property.formattedPrice}} FCFA</div>
    </div>
</div>