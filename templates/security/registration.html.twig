{% extends 'base.html.twig' %}
{% block title 'Se connecter' %}


{% block body %}
<div class="container mt-5">

    <h1> Inscription sur le site</h1>
    {{  form_start(form) }}

    {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'exple: francklin' }}) }}
    {{ form_row(form.phone, {'label': 'Numéro de Télephone', 'attr': {'placeholder': 'exple: 05 01 88
    84' }}) }}
    {{ form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'exple: mon-email@yahoo.fr' }}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Votre mot de passe...'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe', 'attr': {'placeholder': 'Confirmez ce mot de passe...' }}) }}
    
    <button type="submit" class="btn btn-outline-success">Inscription</button>
    {{  form_end(form) }}
</div>

{% endblock %}
