{% extends 'base.html.twig' %}
{% block title property.title %}

{% block body %}
    <div class="jumbottron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                </div>
                <div class="col-md-4">
                    <h2>{{ property.title}}</h2>
                    <h2>{{ property.rooms}} pièces - {{ property.surface}} m²</h2>
                    <div class="text-primary" style="font-size: 3rem;font-weight: bold;">{{property.FormattedPrice}} FCFA</div>
                    <a href="#" target="_blank" class="btn btn-primary" rel="contacter le responsable">Contacter le responsable</a>
                </div>
            </div>
        </div>
    </div>
	<div class="container mt-4">
        <p>
            {{ property.description | nl2br }}
        </p>

        <div class="row">
            <div class="col-md-8">
                <h2>Caractéristiques du bien</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Surface habitable</td>
                        <td>{{ property.surface}} m²</td>
                    </tr>
                    <tr>
                        <td>Pièces</td>
                        <td>{{ property.rooms}}</td>
                    </tr>
                    <tr>
                        <td>Chambres</td>
                        <td>{{ property.bedrooms}}</td>
                    </tr>
                    <tr>
                        <td>Etage</td>
                        <td>{{ property.floor}}</td>
                    </tr>
                    <tr>
                        <td>Type de chauffage</td>
                        <td>{{ property.heatType}}</td>
                    </tr>
                </table>

            </div>
            <div class="col-md-4">
                <h2>Spécificités</h2>
            </div>
        </div>
	</div>
{% endblock %}

