<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>{% block title %}Welcome!{% endblock %}</title>

			{% block stylesheets %}	{% endblock %}
			<!-- Latest compiled and minified CSS -->
			<link rel="stylesheet" href="https://bootswatch.com/4/darkly/bootstrap.min.css">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.12/css/select2.min.css">
		
		</head>
		<body>
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<a class="navbar-brand" href="{{ path('home') }}">Agence Camer</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarColor01">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item active">
						<a class="nav-link" {% if current_menu is defined and current_menu == 'properties' %} active {% endif %} href="{{ path('property.index') }}">Louer</a>
					</li>
					{% if app.user %}
					<li class="nav-item">
						<a class="nav-link" href="{{ path('logout') }}">Se d√©connecter</a>
					</li>
				{% endif %}
				</ul>
				</div>
			</nav>

			{% block body %}{% endblock %}
			<!-- jQuery library -->
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
			<!-- Latest compiled JavaScript -->
			<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

			<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.12/js/select2.min.js"></script>
			<script>
				$('select').select2();
			</script>
			{% block javascripts %}{% endblock %}
		</body>
	</head>
</html>

